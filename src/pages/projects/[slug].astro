---
import FullWidthLayout from '../../layouts/FullWidthLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// Define getStaticPaths to tell Astro which paths to generate
export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  
  return projectEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// Get the project data from the props
const { entry } = Astro.props;
const { Content, headings } = await entry.render();

// Get the community district name for display
const getBoroughName = (cdCode: string) => {
  const borough = cdCode.charAt(0);
  const boroughNames: Record<string, string> = {
    '1': 'Manhattan',
    '2': 'Bronx',
    '3': 'Brooklyn',
    '4': 'Queens',
    '5': 'Staten Island'
  };
  return boroughNames[borough] || 'Unknown';
};

const getCDNumber = (cdCode: string) => {
  return cdCode.substring(1);
};

const boroughName = getBoroughName(entry.data.cdCode);
const cdNumber = getCDNumber(entry.data.cdCode);
---

<FullWidthLayout 
  title={`${entry.data.title} - CDSpec`}
  description={entry.data.description}
>
  <div class="min-h-screen bg-gradient-to-br from-background via-background to-secondary/10">
    <div class="container mx-auto px-4 py-16">
      
      <!-- Back to home button -->
      <div class="mb-8">
        <a href="/" class="inline-flex items-center text-muted-foreground hover:text-foreground transition-colors">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to CDSpec
        </a>
      </div>

      <!-- Project header -->
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <div class="mb-4">
            <span class="inline-block px-3 py-1 bg-primary/10 text-primary rounded-full text-sm font-medium">
              {boroughName} Community District {cdNumber}
            </span>
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
            {entry.data.title}
          </h1>
          
          <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
            {entry.data.description}
          </p>

          <!-- Project metadata -->
          <div class="flex flex-wrap justify-center gap-4 text-sm text-muted-foreground mb-8">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              {entry.data.publishDate.toLocaleDateString()}
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              {entry.data.cdName}
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              {entry.data.borough}
            </div>
          </div>
        </div>

        <!-- Main call-to-action -->
        <div class="text-center mb-12">
          <div class="bg-white/50 backdrop-blur-sm border border-border rounded-2xl p-8 shadow-lg">
            <h2 class="text-2xl font-bold mb-4">View the Full Project</h2>
            <p class="text-muted-foreground mb-6">
              This project is hosted as an interactive ArcGIS StoryMap. Click below to explore the full analysis and visualizations.
            </p>
            
            <a 
              href={entry.data.storymapUrl} 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center px-8 py-4 bg-primary text-primary-foreground rounded-lg text-lg font-semibold hover:bg-primary/90 transition-colors shadow-md hover:shadow-lg"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Open ArcGIS StoryMap
            </a>
          </div>
        </div>

        <!-- Project thumbnail if available -->
        {entry.data.thumbnail && (
          <div class="mb-12">
            <div class="relative rounded-xl overflow-hidden border border-border shadow-lg">
              <Image 
                src={entry.data.thumbnail} 
                alt={`${entry.data.title} thumbnail`}
                class="w-full h-auto"
                loading="lazy"
              />
            </div>
          </div>
        )}

        <!-- Project content -->
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>

        <!-- Tags if available -->
        {entry.data.tags && entry.data.tags.length > 0 && (
          <div class="mt-12 pt-8 border-t border-border">
            <h3 class="text-lg font-semibold mb-4">Tags</h3>
            <div class="flex flex-wrap gap-2">
              {entry.data.tags.map(tag => (
                <span class="px-3 py-1 bg-secondary text-secondary-foreground rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        )}

        <!-- Back to projects -->
        <div class="mt-12 text-center">
          <a href="/projects" class="inline-flex items-center text-muted-foreground hover:text-foreground transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            View All Projects
          </a>
        </div>
      </div>
    </div>
  </div>
</FullWidthLayout>
